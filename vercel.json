{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "env": {
    "VITE_API_URL": "https://cryptochat-backend.onrender.com"
  },
  "routes": [
    { 
      "src": "/assets/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "continue": true
    },
    { 
      "src": "/(.*)\\.(js|css|svg|jpg|jpeg|png|gif|ico|woff2?|ttf|eot)$",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "continue": true
    },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
